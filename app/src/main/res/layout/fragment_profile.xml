<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 用户信息标题 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人资料"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/purple_500"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp" />

            <!-- 用户头像 -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_person_placeholder"
                android:layout_marginBottom="16dp" />

            <!-- 更换头像按钮 -->
            <Button
                android:id="@+id/btn_change_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更换头像"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/purple_500" />

            <!-- 用户名显示 -->
            <TextView
                android:id="@+id/tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="用户名: "
                android:textSize="16sp"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="16dp" />

            <!-- 修改用户名按钮 -->
            <Button
                android:id="@+id/btn_change_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="修改用户名"
                android:layout_marginBottom="24dp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/purple_500" />

            <!-- 邮箱显示 -->
            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="邮箱: "
                android:textSize="16sp"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="16dp" />

            <!-- 修改密码按钮 -->
            <Button
                android:id="@+id/btn_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="修改密码"
                android:layout_marginBottom="24dp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/purple_500" />

            <!-- WebDAV设置分割线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginVertical="16dp" />

            <!-- WebDAV设置标题 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WebDAV 设置"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/purple_500"
                android:layout_marginBottom="16dp" />

            <!-- WebDAV开关 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="启用 WebDAV 同步"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/switch_webdav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false" />
            </LinearLayout>

            <!-- WebDAV配置按钮 -->
            <Button
                android:id="@+id/btn_webdav_config"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WebDAV 配置"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/purple_500" />

            <!-- WebDAV状态显示 -->
            <TextView
                android:id="@+id/tv_webdav_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WebDAV 状态: 未连接"
                android:textSize="14sp"
                android:padding="8dp"
                android:background="@drawable/status_background_disconnected"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp" />

            <!-- 手动同步按钮 -->
            <Button
                android:id="@+id/btn_sync_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="立即同步"
                android:layout_marginBottom="24dp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/teal_700" />

            <!-- 退出登录按钮 -->
            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="退出登录"
                android:layout_marginBottom="16dp"
                android:textColor="@android:color/white"
                android:backgroundTint="@android:color/holo_red_dark" />

        </LinearLayout>
    </ScrollView>

    <!-- 进度条 -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="16dp" />

</LinearLayout>