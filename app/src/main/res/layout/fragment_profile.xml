<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:paddingTop="0dp"
    android:background="@color/colorBackground">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 顶部 FaceCheck 标题，作为 Logo 样式 -->
            <TextView
                android:id="@+id/tv_logo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FaceCheck"
                android:textSize="56sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="24dp"
                android:textColor="@color/primary" />
            <!-- 分割线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="12dp" />
            <!-- 主题模式选择：系统 / 深色 / 浅色 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <Button
                    android:id="@+id/btn_theme_system"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="系统模式"
                    android:background="@drawable/bg_theme_option_selected"
                    android:textColor="@android:color/black"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btn_theme_dark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="深色模式"
                    android:background="@drawable/bg_theme_option_unselected"
                    android:textColor="@android:color/black"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btn_theme_light"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="浅色模式"
                    android:background="@drawable/bg_theme_option_unselected"
                    android:textColor="@android:color/black"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp" />
            </LinearLayout>
            <!-- 分割线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="16dp" />

            <!-- WebDAV 开关（主设置区） -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="启用 WebDAV"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/switch_webdav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false" />
            </LinearLayout>

            <!-- 更多设置入口 -->
            <LinearLayout
                android:id="@+id/item_more_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="更多设置"
                    android:textSize="16sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chevron_right_24" />
            </LinearLayout>

            <!-- 关于 FaceCheck 入口 -->
            <LinearLayout
                android:id="@+id/item_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="关于 FaceCheck"
                    android:textSize="16sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chevron_right_24" />
            </LinearLayout>

            <!-- 分割线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="12dp" />

            <!-- 用户信息区（可滚动，下移） -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前用户"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginBottom="12dp" />

            <!-- 用户头像 -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_person_placeholder"
                android:layout_marginBottom="16dp" />

            <!-- 更换头像按钮 -->
            <Button
                android:id="@+id/btn_change_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更换头像"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/primary" />

            <!-- 用户名显示 -->
            <TextView
                android:id="@+id/tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="用户名: "
                android:textSize="16sp"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="8dp" />

            <!-- 修改用户名按钮 -->
            <Button
                android:id="@+id/btn_change_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="修改用户名"
                android:layout_marginBottom="16dp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/primary" />

            <!-- 邮箱显示（用 username 代替） -->
            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="邮箱: "
                android:textSize="16sp"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="8dp" />

            <!-- 修改密码按钮（保持 ID，逻辑保持） -->
            <Button
                android:id="@+id/btn_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="修改密码"
                android:layout_marginBottom="16dp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/primary" />

            <!-- WebDAV状态与配置按钮（迁移到更多设置，主页面默认隐藏但保留 ID） -->
            <Button
                android:id="@+id/btn_webdav_config"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WebDAV 配置"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/primary"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_webdav_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WebDAV 状态: 未连接"
                android:textSize="14sp"
                android:padding="8dp"
                android:background="@drawable/status_background_disconnected"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_sync_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="立即同步"
                android:layout_marginBottom="16dp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/teal_700"
                android:visibility="gone" />

            <!-- 缓存管理（迁移到更多设置，默认隐藏但保留 ID） -->
            <TextView
                android:id="@+id/tv_cache_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="缓存: 计算中..."
                android:textSize="14sp"
                android:padding="8dp"
                android:background="@drawable/status_background_disconnected"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_cache_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="缓存设置"
                android:layout_marginBottom="16dp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/primary"
                android:visibility="gone" />

            <!-- 退出登录按钮 -->
            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="退出登录"
                android:layout_marginBottom="16dp"
                android:textColor="@android:color/white"
                android:backgroundTint="@android:color/holo_red_dark" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 进度条 -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="16dp" />

</LinearLayout>